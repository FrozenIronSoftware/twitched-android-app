<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.rolandoislas.twitched.android.MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/title_ip"
            android:ems="10"
            tools:layout_editor_absoluteY="16dp" android:id="@+id/ipField"
            app:layout_constraintRight_toRightOf="parent" app:layout_constraintLeft_toLeftOf="parent"
            android:textAlignment="center"/>
    <TextView
            android:text="@string/title_rokus"
            android:layout_width="106dp"
            android:layout_height="29dp" android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/ipField" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp" android:textAlignment="center"/>
    <ListView
            android:layout_width="318dp"
            android:layout_height="362dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:id="@+id/rokuList"
            app:layout_constraintLeft_toLeftOf="parent"
    />
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/searchIndicator"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:clickable="true"
            app:fabSize="mini" app:srcCompat="@android:drawable/ic_dialog_info"
            android:id="@+id/infoButton"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/rokuList" android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/rokuList" android:layout_marginLeft="-2dp"/>
</android.support.constraint.ConstraintLayout>
